<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- extend hr.employee form; use page Performance -->
    <record id="hr_employee_form_inherit_perf" model="ir.ui.view">
        <field name="name">hr.employee.form.performance.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Performance">
                    <group>
                        <field name="employee_code"/>
                        <field name="grade"/>
                        <field name="division_title"/>
                        <field name="location"/>
                        <field name="employee_is"/>
                    </group>
                    <group>
                        <field name="review_date_from"/>
                        <field name="review_date_to"/>
                        <field name="assessment_last_year"/>
                        <field name="last_promotion_year"/>
                        <field name="highest_education"/>
                    </group>
                    <group>
                        <field name="joining_date"/>
                        <field name="length_of_service" readonly="1"/>
                    </group>
                    <group>
                        <!-- A button to check/aggregate subordinates' KPIs for this employee (Supervisor) -->
                        <button name="action_aggregate_subordinates" type="object" string="Checked" class="btn-primary"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Add a simple list view for employees based on requirement: use <list> not <tree> -->
    <record id="view_hr_employee_list_perf" model="ir.ui.view">
        <field name="name">hr.employee.list.performance</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="job_title"/>
                <field name="parent_id" string="Supervisor"/>
                <field name="department_id"/>
            </list>
        </field>
    </record>

    <!-- Action to open hr.employee hierarchy -->
    <record id="action_hr_employee_hierarchy" model="ir.actions.act_window">
        <field name="name">Employee Hierarchy</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="target">current</field>
    </record>
</odoo>
