<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Employee KPI List View -->
    <record id="view_employee_kpi_list" model="ir.ui.view">
        <field name="name">employee.kpi.list</field>
        <field name="model">employee.kpi</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="supervisor_id"/>
                <field name="level_id"/>
                <field name="overall_rating"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Employee KPI Form View -->
    <record id="view_employee_kpi_form" model="ir.ui.view">
        <field name="name">employee.kpi.form</field>
        <field name="model">employee.kpi</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="supervisor_id" readonly="1"/>
                            <field name="level_id"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="total_weightage" readonly="1"/>
                            <field name="overall_rating" readonly="1"/>
                            <button name="action_mark_checked" type="object" string="Checked" class="btn-primary" invisible="state != 'draft'"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Overall Rating">
                            <field name="kpi_line_ids">
                                <list editable="bottom">
                                    <field name="objective_id"/>
                                    <field name="achieved_percentage"/>
                                    <field name="weightage"/>
                                    <field name="rating"/>
                                    <field name="final_rating"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="objective_id" readonly="1"/>
                                        <field name="achieved_percentage" readonly="1"/>
                                        <field name="weightage"/>
                                        <field name="rating"/>
                                        <field name="final_rating" readonly="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        
                        <page string="Comments/Reviews">
                            <field name="comments_reviews"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Employee KPI Action -->
    <record id="action_employee_kpi_entries" model="ir.actions.act_window">
        <field name="name">Employee KPI</field>
        <field name="res_model">employee.kpi</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>