<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root menu for Employee Performance -->
    <menuitem id="menu_employee_performance_root" name="Employee Performance" sequence="30"/>

    <!-- Dashboard menu -->
    <menuitem id="menu_employee_performance_dashboard" name="Dashboard"
              parent="menu_employee_performance_root"
              action="action_employee_performance_dashboard"
              sequence="1"/>

    <!-- Main Employee Performance menu (parent, no action) -->
    <menuitem id="menu_employee_performance_main" name="Employee Performance"
              parent="menu_employee_performance_root"
              action="action_employee_performance_entries"
              sequence="2"/>

    <!-- KPI menu -->
    <!-- There is no action_performance_kpi defined in your XMLs, so either create it or remove action -->
    <menuitem id="menu_performance_kpi" name="KPI"
              parent="menu_employee_performance_root"
              sequence="3"/>

    <!-- Hierarchy Observation -->
    <menuitem id="menu_performance_hierarchy" name="Hierarchy Observation"
              parent="menu_employee_performance_root"
              action="action_hr_employee_hierarchy"
              sequence="4"/>

    <!-- Configuration menu -->
    <menuitem id="menu_performance_config" name="Configuration"
              parent="menu_employee_performance_root"
              sequence="5"/>

    <!-- Configuration submenus -->
    <menuitem id="menu_config_levels" name="Level/Role"
              parent="menu_performance_config"
              action="action_performance_levels"/>
    <menuitem id="menu_config_objectives" name="Target Objective"
              parent="menu_performance_config"
              action="action_performance_objectives"/>
    <menuitem id="menu_config_level_targets" name="Level Wise Target"
              parent="menu_performance_config"
              action="action_performance_level_targets"/>
</odoo>
